{
  "schemaVersion": 1,
  "id": "hudium",
  "version": "${version}",

  "name": "Hudium",
  "description": "Tons of HUD tweaks because I am too lazy to install that many libraries",
  "authors": [
    "pkstDev"
  ],

  "license": "MIT License",
  "icon": "assets/hudium/icon.png",

  "environment": "client",
  "entrypoints": {
    "client": [
      "dev.intelligentcreations.hudium.HudiumClient"
    ],
    "hudium_info": [
      "dev.intelligentcreations.hudium.plugin.info.BlockBreakProgressPlugin",
      "dev.intelligentcreations.hudium.plugin.info.EntityHealthPlugin"
    ]
  },
  "mixins": [
    "hudium.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.14.6",
    "fabric": "*",
    "minecraft": "1.19.*",
    "java": ">=17"
  }
}
